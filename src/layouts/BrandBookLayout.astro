---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;

const brandNavLinks = [
  { href: '/brand', label: 'Overview' },
  { href: '/brand/colors', label: 'Colors' },
  { href: '/brand/typography', label: 'Typography' },
  { href: '/brand/components', label: 'Components' },
];

const currentPath = Astro.url.pathname;
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <div class="brand-layout">
    <aside class="brand-layout__sidebar">
      <nav class="brand-nav" aria-label="Brand book navigation">
        <h3 class="brand-nav__title">Brand Book</h3>
        <ul class="brand-nav__list">
          {brandNavLinks.map(link => (
            <li class="brand-nav__item">
              <a
                href={link.href}
                class:list={['brand-nav__link', { 'brand-nav__link--active': currentPath === link.href }]}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </aside>

    <div class="brand-layout__content">
      <slot />
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .brand-layout {
    display: grid;
    grid-template-columns: 1fr;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--space-8) var(--container-padding);
    gap: var(--space-8);
  }

  @media (min-width: 1024px) {
    .brand-layout {
      grid-template-columns: 220px 1fr;
      padding: var(--space-12) var(--container-padding);
    }
  }

  .brand-layout__sidebar {
    position: relative;
    top: 0;
  }

  @media (min-width: 1024px) {
    .brand-layout__sidebar {
      position: sticky;
      top: calc(var(--header-height) + var(--space-8));
      height: fit-content;
    }
  }

  .brand-nav__title {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: var(--tracking-widest);
    color: var(--text-tertiary);
    margin: 0 0 var(--space-4);
    padding-left: var(--space-3);
  }

  .brand-nav__list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .brand-nav__item {
    margin: 0;
  }

  .brand-nav__link {
    display: block;
    padding: var(--space-2) var(--space-3);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    text-decoration: none;
    border-left: 2px solid transparent;
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
    transition: all var(--transition-fast);
  }

  .brand-nav__link:hover {
    color: var(--text-primary);
    background-color: var(--bg-secondary);
  }

  .brand-nav__link--active {
    color: var(--accent-primary);
    border-left-color: var(--accent-primary);
    background-color: var(--accent-primary-muted);
  }

  .brand-layout__content {
    min-width: 0;
  }
</style>
