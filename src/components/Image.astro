---
export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  sizes?: string;
  widths?: number[];
}

const {
  src,
  alt,
  width,
  height,
  loading = 'lazy',
  class: className = '',
  sizes = '(max-width: 640px) 100vw, (max-width: 1024px) 80vw, 800px',
  widths = [320, 640, 960, 1280, 1920]
} = Astro.props;

// Use single image size - no variants needed
const finalSrc = src.includes('imagedelivery.net') ? src.replace('/public', '/public') : src;
---

<img
  src={finalSrc}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  decoding="async"
  class={className}
/>

<style>
  img {
    max-width: 100%;
    height: auto;
    display: block;
  }
</style>