---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<button
  data-theme-toggle
  class:list={['theme-toggle', className]}
  aria-label="Toggle dark/light mode"
  title="Toggle theme"
>
  <svg class="theme-toggle__icon theme-toggle__icon--sun" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
    <circle cx="12" cy="12" r="4"></circle>
    <path d="M12 2v2"></path>
    <path d="M12 20v2"></path>
    <path d="m4.93 4.93 1.41 1.41"></path>
    <path d="m17.66 17.66 1.41 1.41"></path>
    <path d="M2 12h2"></path>
    <path d="M20 12h2"></path>
    <path d="m6.34 17.66-1.41 1.41"></path>
    <path d="m19.07 4.93-1.41 1.41"></path>
  </svg>
  <svg class="theme-toggle__icon theme-toggle__icon--moon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
    <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
  </svg>
</button>

<style>
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    padding: 0;
    background: transparent;
    border: 1px solid var(--border-medium);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .theme-toggle:hover {
    background-color: var(--bg-secondary);
    color: var(--text-primary);
    border-color: var(--border-strong);
  }

  .theme-toggle__icon {
    transition: transform var(--transition-smooth), opacity var(--transition-fast);
  }

  /* Dark theme (default) - show sun icon */
  .theme-toggle__icon--sun {
    display: block;
  }

  .theme-toggle__icon--moon {
    display: none;
  }

  /* Light theme - show moon icon */
  :global([data-theme="light"]) .theme-toggle__icon--sun {
    display: none;
  }

  :global([data-theme="light"]) .theme-toggle__icon--moon {
    display: block;
  }

  .theme-toggle:hover .theme-toggle__icon {
    transform: rotate(15deg);
  }
</style>

<script>
  // Update button state on theme change
  window.addEventListener('theme-change', (e) => {
    const buttons = document.querySelectorAll('[data-theme-toggle]');
    buttons.forEach(button => {
      const theme = (e as CustomEvent).detail.theme;
      button.setAttribute('aria-label', `Switch to ${theme === 'light' ? 'dark' : 'light'} mode`);
    });
  });
</script>
