---
interface Props {
  value: string;
  label: string;
  accent?: 'primary' | 'success' | 'violet' | 'rose' | 'warning' | 'error';
  size?: 'default' | 'large';
}

const { value, label, accent = 'primary', size = 'default' } = Astro.props;
---

<div class:list={['stat', `stat--${accent}`, size === 'large' && 'stat--large']}>
  <span class="stat__value">{value}</span>
  <span class="stat__label">{label}</span>
</div>

<style>
  .stat {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .stat__value {
    font-family: var(--font-mono);
    font-size: var(--text-3xl);
    font-weight: var(--font-weight-bold);
    line-height: 1;
    letter-spacing: var(--tracking-tight);
  }

  .stat--large .stat__value {
    font-size: var(--text-4xl);
  }

  .stat__label {
    font-size: var(--text-sm);
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  /* Accent Colors */
  .stat--primary .stat__value { color: var(--accent-primary); }
  .stat--success .stat__value { color: var(--color-success); }
  .stat--violet .stat__value { color: var(--accent-violet); }
  .stat--rose .stat__value { color: var(--accent-rose); }
  .stat--warning .stat__value { color: var(--color-warning); }
  .stat--error .stat__value { color: var(--color-error); }
</style>
