---
interface Props {
  title: string;
  description: string;
  href: string;
  pubDate: Date;
  category: string;
  readTime: string;
  tags?: string[];
  heroImage?: string;
}

const {
  title,
  description,
  href,
  pubDate,
  category,
  readTime,
  tags = [],
  heroImage,
} = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
});

const isoDate = pubDate.toISOString();

// Determine accent color based on category
const categoryAccent = 'primary';

// Use single image size - no variants needed
const finalHeroImage = heroImage?.includes('imagedelivery.net') ? heroImage.replace('/public', '/public') : heroImage;
---

<article class="article-card reveal">
  <a href={href} class="article-card__link">
    <div class="article-card__image">
      {heroImage ? (
        <img 
          src={finalHeroImage} 
          alt="" 
          loading="lazy" 
          decoding="async" 
        />
      ) : (
        <div class={`article-card__placeholder article-card__placeholder--${categoryAccent}`}>
          <div class="article-card__placeholder-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path>
              <path d="M8 7h6"></path>
              <path d="M8 11h8"></path>
            </svg>
          </div>
        </div>
      )}
    </div>
    <div class="article-card__content">
      <div class="article-card__meta">
        <span class={`article-card__category article-card__category--${categoryAccent}`}>{category}</span>
        <span class="article-card__separator">â€¢</span>
        <time class="article-card__date" datetime={isoDate}>{formattedDate}</time>
      </div>
      <h3 class="article-card__title" set:html={title} />
      <p class="article-card__description">{description}</p>
      <div class="article-card__footer">
        <span class="article-card__read-time">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          {readTime}
        </span>
        {tags.length > 0 && (
          <div class="article-card__tags">
            {tags.slice(0, 2).map(tag => (
              <span class="badge">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </div>
  </a>
</article>

<style>
  .article-card {
    background-color: var(--bg-card);
    border: 1px solid var(--border-medium);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-smooth);
  }

  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-card);
    border-color: var(--accent-primary);
  }

  .article-card__link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .article-card__image {
    aspect-ratio: 16 / 9;
    background-color: var(--bg-secondary);
    overflow: hidden;
    position: relative;
  }

  .article-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-smooth), opacity var(--transition-fast);
  }

  .article-card:hover .article-card__image img {
    transform: scale(1.05);
  }

  .article-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      135deg,
      var(--accent-primary-muted) 0%,
      var(--bg-tertiary) 50%,
      var(--accent-cool-muted) 100%
    );
    position: relative;
  }

  .article-card__placeholder-icon {
    color: var(--text-muted);
    opacity: 0.5;
    transition: all var(--transition-smooth);
  }

  .article-card:hover .article-card__placeholder-icon {
    transform: scale(1.1);
    opacity: 0.7;
  }

  .article-card__content {
    padding: var(--space-6);
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .article-card__meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
  }

  .article-card__category {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--accent-primary);
  }

  .article-card__separator {
    color: var(--text-muted);
    font-size: var(--text-xs);
  }

  .article-card__date {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
  }

  .article-card__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-weight-semibold);
    line-height: var(--leading-snug);
    margin: 0 0 var(--space-3);
    color: var(--text-primary);
    transition: color var(--transition-fast);
  }

  .article-card:hover .article-card__title {
    color: var(--accent-primary);
  }

  .article-card__title :global(em) {
    font-style: italic;
    color: var(--accent-primary);
  }

  .article-card__description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    flex: 1;
    margin: 0 0 var(--space-4);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-3);
    flex-wrap: wrap;
    padding-top: var(--space-4);
    border-top: 1px solid var(--border-subtle);
  }

  .article-card__read-time {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xs);
    color: var(--text-tertiary);
  }

  .article-card__read-time svg {
    opacity: 0.7;
  }

  .article-card__tags {
    display: flex;
    gap: var(--space-2);
  }

  .article-card__tags .badge {
    font-size: 0.65rem;
  }

  /* Loading skeleton animation */
  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  .article-card__image.loading {
    background: linear-gradient(
      90deg,
      var(--bg-secondary) 0%,
      var(--bg-tertiary) 50%,
      var(--bg-secondary) 100%
    );
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
  }
</style>
