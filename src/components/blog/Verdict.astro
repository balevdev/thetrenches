---
interface Props {
  winner: 'violet' | 'rose' | 'batch' | 'stream';
  title?: string;
}

const { winner, title } = Astro.props;

const config = {
  violet: {
    label: 'Option A',
    icon: `<rect width="7" height="7" x="3" y="3"></rect><rect width="7" height="7" x="14" y="3"></rect><rect width="7" height="7" x="14" y="14"></rect><rect width="7" height="7" x="3" y="14"></rect>`,
    style: 'violet',
  },
  rose: {
    label: 'Option B',
    icon: `<path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"></path>`,
    style: 'rose',
  },
  batch: {
    label: 'Batch Processing',
    icon: `<rect width="7" height="7" x="3" y="3"></rect><rect width="7" height="7" x="14" y="3"></rect><rect width="7" height="7" x="14" y="14"></rect><rect width="7" height="7" x="3" y="14"></rect>`,
    style: 'violet',
  },
  stream: {
    label: 'Streaming',
    icon: `<path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"></path>`,
    style: 'rose',
  },
};

const { label, icon, style } = config[winner];
---

<div class:list={['verdict', `verdict--${style}`]}>
  <div class="verdict__header">
    <svg class="verdict__icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={icon} />
    <span class="verdict__label">{title || label}</span>
  </div>
  <div class="verdict__content">
    <slot />
  </div>
</div>

<style>
  .verdict {
    position: relative;
    margin: var(--space-6) 0;
    padding: var(--space-4) var(--space-5);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .verdict::before {
    content: '';
    position: absolute;
    inset: 0;
    opacity: 0.06;
    pointer-events: none;
  }

  .verdict--violet {
    background: var(--accent-violet-bg);
    border: 1px solid var(--accent-violet-muted);
  }

  .verdict--violet::before {
    background: linear-gradient(135deg, var(--accent-violet) 0%, transparent 50%);
  }

  .verdict--rose {
    background: var(--accent-rose-bg);
    border: 1px solid var(--accent-rose-muted);
  }

  .verdict--rose::before {
    background: linear-gradient(135deg, var(--accent-rose) 0%, transparent 50%);
  }

  .verdict__header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
  }

  .verdict__icon {
    flex-shrink: 0;
    width: 16px;
    height: 16px;
  }

  .verdict--violet .verdict__icon { color: var(--accent-violet); }
  .verdict--rose .verdict__icon { color: var(--accent-rose); }

  .verdict__label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .verdict--violet .verdict__label { color: var(--accent-violet); }
  .verdict--rose .verdict__label { color: var(--accent-rose); }

  .verdict__content {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
  }

  .verdict__content :global(p) {
    margin-bottom: 0;
  }
</style>
